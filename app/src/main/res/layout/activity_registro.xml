<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro"
    android:background="@android:color/black"
    >

    <LinearLayout android:layout_height="457dp"
        android:layout_width="320dp"
        tools:layout_editor_absoluteY="-2dp"
        tools:layout_editor_absoluteX="0dp"
        android:orientation="vertical">

        <TextView android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:typeface="serif"
            android:textStyle="bold"
            android:textSize="36sp"
            android:textColor="@android:color/holo_orange_light"
            android:textAlignment="center"
            android:text="Nari'"
            android:fontFamily="serif"
            android:id="@+id/textNari"/>

        <ImageView android:layout_height="130dp"
            android:layout_width="match_parent"
            android:id="@+id/imageNari"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_marginTop="10dp"/>

        <TextView android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            android:textAlignment="center"
            android:text="Registro de Usuarios"
            android:id="@+id/textView"/>

        <EditText android:background="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textColor="@android:color/background_dark"
            android:id="@+id/txtNombre"
            android:layout_marginTop="20dp"
            android:inputType="textPersonName"
            android:hint="Nombre"
            android:ems="10"/>

        <EditText android:background="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@android:color/background_dark"
            android:id="@+id/txtPassword"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:hint="ContraseÃ±a"
            android:ems="10"/>

        <EditText android:background="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@android:color/background_dark"
            android:id="@+id/txtCorreo"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:hint="Correo electronico"
            android:ems="10"/>

        <Button android:background="@android:color/holo_red_dark"
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:typeface="sans"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            android:textAlignment="center"
            android:text="Registrar "
            android:id="@+id/buttonRegistro"
            android:layout_marginTop="30dp"/>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>